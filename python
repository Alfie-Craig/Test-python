questions = ['is 2+2 = 4?', 'is 1+1=3', 'is 4+6 = 10']

answer = ['yes','no','yes']

score = 0

def quizGame():
    for i in range(len(questions)):
        print(questions[i])
        ans = input('Please answer \n')
        if ans == ans[i]:
            print('Correct')
        else:
            print('incorrect')
quizGame()           